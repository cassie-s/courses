  gem 'spring'

  gem 'rspec', '~> 3.2'
  gem 'rspec-rails', '~> 3.2'
end

group :development do
  gem 'capistrano', '~> 3.3'
  gem 'capistrano-rails', '~> 1.1'
  gem 'capistrano-bundler', '~> 1.1'
end
